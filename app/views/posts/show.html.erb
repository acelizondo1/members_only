<p id="notice"><%= notice %></p>

<div class="column is-6 is-offset-3">
    <div class="box centered-text columns">
        <div class="column is-4 is-size-4">
            <strong><%= @post.title %></strong>
            <% if member_signed_in? %>
                <% if current_member.id == @post.member_id %>
                    <div class="is-size-6"">
                        <%= link_to 'Edit', edit_post_path(@post) %>
                        |
                        <%= link_to 'Back', posts_path %>
                    </div>
                <% end %>
                <div class="is-size-6 is-4 box">
                    <strong>Author:</strong><br />
                    <p>
                        <%= @post.member.first_name + " " + @post.member.last_name%>
                    </p>
                    <p>
                        <%= @post.member.email %>
                    </p>
                </div>
            <% end %>
        </div>
        <p class="is-size-6 is-8">
            <%= @post.body %>
        </p>
    </div>
</div>