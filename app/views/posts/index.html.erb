<p id="notice"><%= notice %></p>
<div class="column is-4 is-offset-4 centered-text">
  <div class="media-center">
    <h1 class="is-size-2">All User Posts</h1>
    <%= link_to 'New Post', new_post_path, class: "button is-info" %>
    <% @posts.each do |post| %>
      <div class="box">
        <article class="columns">
          <nav class="column">
            <div class="is-12 has-centered-text is-size-4">
              <%= link_to post.title, post %>
            </div>
            <div class="is-12 is-size-6">
              <p><strong>Author:</strong></p>
              <p>Aaron Elizondo - acelizondo11@gmail.com</p>
            </div>
            <div class="is-4 is-offset-4">
              <div class="is-size-7"">
                <%= link_to 'Edit', edit_post_path(post) %>
                |
                <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </nav>
        </div>
      </div>          
    <% end %>
    <br>
  </div>
</div>
