<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://bulma.io/vendor/fontawesome-free-5.15.2-web/css/all.min.css">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <p class="notice centered-text notification is-primary"><%= notice %></p>
    <% end%>
    <% if flash[:alert] %>
      <p class="alert centered-text notification is-danger"><%= alert %></p>
    <% end %>

    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="#">
          <strong class="is-size-5">Members_Only</strong>
        </a>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <%= link_to 'Posts', root_path, class: 'navbar-item'%>

          <%= link_to 'New Post', new_post_path, class: 'navbar-item'%>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <% if member_signed_in? %>
                <%= link_to 'Member Profile', edit_member_registration_path, class:"button is-primary", style:"font-weight:bold;" %>
                <%= link_to 'Log Out', destroy_member_session_path, method: :delete, class:"button is-light" %>
              <% else %>
                <%= link_to 'Become A Member', new_member_registration_path, class:"button is-primary", style:"font-weight:bold;" %>
                <%= link_to 'Member Log In', new_member_session_path, class:"button is-light" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>

  </body>
</html>
